/* pages/needDetail/needDetail.wxss */
.top{
  width: 100%;
  height: 120rpx;
  padding: 35rpx 20rpx;
  background: -webkit-linear-gradient(left, #1296db ,#c0dfee); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #1296db ,#c0dfee); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right,#1296db ,#c0dfee); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right,#1296db ,#c0dfee); /* 标准的语法 */
}
.leftarea{
  width: 18%;
  float: left;
}
.rightarea{
  width: 80%
}
.leftImage{
  width: 100rpx;
  height: 100rpx;
  border-radius:50%;
  border: 1px solid #fff
}
.topTitle{
  font-size: 34rpx;
  color: #fff;
  font-weight: 600;
}
.topText{
  font-size: 20rpx;
  background-color: #333;
  opacity: 0.7;
  color: #fff;
  padding: 8rpx 10rpx;
  border-radius:25rpx; 
}
.centerArea{
  width: 100%;
  padding:30rpx 30rpx;
  line-height: 65rpx;
  border-bottom: 1px solid #bfbfbf;
}
.centerType{ 
  font-size:30rpx;
  color:#bfbfbf;

}
.centerContent{
  font-size:30rpx;
  color:#333;
}
.tipArea{
  margin-top: 20rpx;
  margin-left:30rpx; 
  float: left;
}
.tipType{
  background-color: #e7ecf9;
  color: #4368d1;
  font-size: 26rpx;
  padding:6rpx 12rpx;
  border-radius:10rpx;  
  margin-right:50rpx;  
}
.bottomArea{
  width: 100%;
  position: fixed;
  bottom: 0;
  border-top:1rpx  solid #bfbfbf

}
.exchangImage{
  width: 50rpx;
  height: 50rpx;
  margin: 25rpx;
}
.btnType{
  width: 80%;
  float: right;
  margin: 15rpx;
  border-radius: 50rpx;
  background: #1296db;
  color: white;
  font-size: 30rpx;

}
.QrcodeType{
  width: 40%;
  float: left;
  margin: 10rpx;
  border-radius: 50rpx;
  background: #fff;
  color: #333;
  font-size: 30rpx;
  border:1rpx solid #bfbfbf;
  box-shadow: 0 1px 1px #bfbfbf;

}
.table {
  width: 96%;
  margin-top: 1rem;
  margin-left: 2%;
  background: #fff;
  margin-bottom: 1rem
 
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  
}

.td {
  width: 30%;
  justify-content: left;
  color: #bfbfbf;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size: 14px;
  padding-left: 20rpx;
  font-weight: 600;

}

.td-2 {
  width: 70%;
  justify-content: left;
  text-align: left;
  color: #333;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size: 14px;
}

.mainpadding{
  padding: 10rpx 0;
}

.maintip{
  width: 5rpx;
  height: 42rpx;
  background: #1296db;
  float:left;
  margin: 9rpx  18rpx 0 24rpx;
}
.maintitle{
  font-size: 30rpx;
  color: #262626
}
.place{
  height: 15rpx;
  width: 100%;
  background: #ededed;
  border-radius: 8rpx;
}
